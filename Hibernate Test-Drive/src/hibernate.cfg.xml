<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">oracle.jdbc.OracleDriver</property>
        <property name="hibernate.connection.url">jdbc:oracle:thin:@//localhost:1521/xe</property>
        <property name="hibernate.connection.username">system</property>
        <property name="hibernate.connection.password">system</property>
        <property name="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</property>
        <property name="hibernate.default_schema">SYSTEM</property>
        <property name="show_sql">true</property>

        <mapping class="orm.Attribute"/>
        <mapping class="orm.AttrObjectType"/>
        <mapping class="orm.AttrType"/>
        <mapping class="orm.Grant"/>
        <mapping class="orm.EntityObject"/>
        <mapping class="orm.ObjectType"/>
        <mapping class="orm.Param"/>
        <mapping class="orm.Reference"/>


    </session-factory>
</hibernate-configuration>